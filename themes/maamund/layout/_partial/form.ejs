<div id="contact-<%= contact %>" class="form-wrapper">
	<h4 class="sr-only sr-only-focusable">Contact with <%= items[contact].name %></h4>
	<form id="contact-form" class="needs-validation" novalidate method="post" action="<%- url_for('contact.php') %>">
		<div class="contact-controls">
		  <!-- Name -->
		  <div class="form-group row">
		    <div class="col-12">
			    <label for="inputName" class="col-form-label d-none">Name</label>
		      <input type="text" class="form-control" id="inputName" name="name" required placeholder="name">
		    </div>
		  </div>
		  <!-- E-mail -->
		  <div class="form-group row">
		    <div class="col-12">
			    <label for="inputEmail" class="col-form-label d-none">E-mail</label>
		      <input type="email" class="form-control" id="inputEmail" name="email" required placeholder="email">
		    </div>
		  </div>
		  <!-- Phoney phone -->
		  <div class="form-group row row-phone">
		    <div class="col-12">
			    <label for="inputPhone" class="col-form-label d-none">Phone</label>
		      <input type="text" class="form-control" id="inputPhone" name="phone" placeholder="phone">
		    </div>
		  </div>
		  <!-- message:input -->
		  <div class="form-group row">
		    <div class="col-12 mt-1">
		    	<label for="inputMessage" class="d-none">Message</label>
		    	<textarea class="form-control " id="inputMessage" rows="8" required name="message" placeholder="message"></textarea>
		    </div>
		  </div>
		  <!-- Submit button -->
		  <div class="form-group row justify-content-end">
		    <div class="col-sm-12">
		      <button type="submit" class="btn float-right">Send -></button>
		    </div>
		  </div>
		</div>
		<div id="contact-msg" class="contact-msg row align-items-center text-center justify-content-center">
			<div id="contact-msg-success" class="col-12 " >
				<h5>Message sent!</h5>
				<p>I will get back to you shortly</p>
			</div>
			<div id="contact-msg-error" class="col-12	" >
				<h5>Something went wrong!</h5>
				<p>Please try again</p>
			</div>
			<a href="#" class="btn btn-back float-right">&lt;- Back </a>
		</div>
	</form>
</div>